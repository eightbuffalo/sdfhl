<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Season</th>
    <th>Captain</th>
    <th>Goalie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.color %></td>
    <td><%= team.season_id %></td>
    <td><%= team.captain_id %></td>
    <td><%= team.goalie_id %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

